
.color-picker2

    .hsv-picker
        position: relative
        width: 200px
        height: 200px
        cursor: pointer

        .selection-container
            position: absolute
            pointer-events: none
            transform: translate(-50%, -50%)

            .selection
                width: 12px
                height: 12px
                border: 1px solid #AAA
                border-radius: 50%
                transition: all 0.1s ease-out

            &.dragging,
            &:hover
                .selection
                    width: 18px
                    height: 18px
                    border: 2px solid white
                    border-radius: 50%


    .hsv-canvas
        position: relative
        width: inherit
        height: inherit
        pointer-events: none

        .saturation-value
            position:absolute
            width: inherit
            height: inherit
            background-color: rgba(255,255,255,0)
            background-image: linear-gradient(
                0deg, 
                rgba(0,0,0,1) 0%,
                rgba(0,0,0,0) 100%
            ),
            linear-gradient(
                90deg, 
                rgba(255,255,255,1) 0%, 
                rgba(255,255,255,0) 100%
            );

        .hue
            position: absolute
            background-color: #FF0000
            width: inherit
            height: inherit
