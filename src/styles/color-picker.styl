
.color-picker
    position: relative
    width: 210px
    height: 400px
    background-color: #000

    .grayScale
        cursor: pointer

    .hue
        position: absolute
        top: 0
        left: 5px

        .selection
            width: 16px;
            height: 16px;

            polygon
                fill: #000000
                stroke: #FFFFFF
                stroke-width: 1

    .grayScale
        position: absolute
        top: 0
        left: 10px

        .selection
            width: 12px
            height: 12px
            border: 2px solid white
            border-radius: 50%

