
.color-picker
    position: relative
    width: 210px
    height: 280px
    background-color: #000
    box-shadow: 0px 0px 50px -5px rgba(0,0,0,0.5);

    .right
        background-color: #000
        position: relative
        top: 0
        left: 10px
        height: 100%
        width: 200px

    .hue-slider-palette
        cursor: pointer
        position: absolute
        top: 0
        left: 0
        transition: left 0.1s ease-out;

        .color
            margin-left: 5px

        .selection-container
            height: 16px
            width: 10px

        .selection

            margin-left: 5px

            polygon
                fill: #000
                stroke: #AAA
                stroke-width: 1
                transition: stroke 0.1s ease-out, stroke-width 0.1s ease-out;

        &.dragging,
        &:hover
            left: -5px

            polygon
                stroke: #FFF
                stroke-width: 1.1

    .gray-scale
        cursor: pointer
        position: relative

        .selection
            width: 12px
            height: 12px
            border: 1px solid #AAA
            border-radius: 50%
            transition: all 0.1s ease-out

        &.dragging,
        &:hover
            .selection
                width: 18px
                height: 18px
                border: 2px solid white
                border-radius: 50%

    .inputs
        margin: 10px

        input
            margin-bottom: 10px

